{
    "name": "erenav/makers",
    "description": "Custom Laravel make commands",
    "keywords": [
        "erenav",
        "laravel",
        "makers",
        "stubs",
        "commands",
        "customization"
    ],
    "homepage": "https://github.com/erenav/makers",
    "license": "MIT",
    "authors": [
        {
            "name": "Vanere Maynard",
            "email": "vanere.maynard@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0|^11.0",
        "illuminate/contracts": "^10.0|^11.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.16",
        "nunomaduro/collision": "^8.0",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.4"
    },
    "suggest": {
        "spatie/laravel-model-states": "Needed only if using the make:[state|state-implementation|state-transition] commands"
    },
    "autoload": {
        "psr-4": {
            "Erenav\\Makers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Erenav\\Makers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Erenav\\Makers\\MakersServiceProvider"
            ],
            "aliases": {
                "Makers": "Erenav\\Makers\\Facades\\Makers"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
